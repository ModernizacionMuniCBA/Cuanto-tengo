<?xml version='1.0' encoding='utf-8'?>
<widget id="ar.gob.cordoba.gobiernoabierto.cuantotengo" version="1.1.142" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cuanto Tengo</name>
    <description>
        Aplicación de la Municipalidad de Córdoba para conocer el saldo de la tarjeta de transporte RedBus
    </description>
    <author email="gobiernoabiertocba@gmail.com" href="https://gobiernoabierto.cordoba.gob.ar/">
        Secretaría de Modernización de la Ciudad de Córdoba
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access origin="*" />
    <allow-navigation href="*" />
    <platform name="android">

        <icon src="/www/res/icono-64x64.png" density="ldpi" qualifier="ldpi" />
        <icon src="/www/res/icono-64x64.png" density="mdpi" qualifier="mdpi" />
        <icon src="/www/res/icono-64x64.png" density="hdpi" qualifier="hdpi" />
        <icon src="/www/res/icono-64x64.png" density="xhdpi" qualifier="xhdpi" />

        <splash src="/www/res/splash.png" density="land-ldpi" qualifier="land-ldpi" />
        <splash src="/www/res/splash.png" density="land-mdpi" qualifier="land-mdpi" />
        <splash src="/www/res/splash.png" density="land-hdpi" qualifier="land-hdpi" />
        <splash src="/www/res/splash.png" density="land-xhdpi" qualifier="land-xhdpi" />

        <splash src="/www/res/splash.png" density="port-ldpi" qualifier="port-ldpi" />
        <splash src="/www/res/splash.png" density="port-mdpi" qualifier="port-mdpi" />
        <splash src="/www/res/splash.png" density="port-hdpi" qualifier="port-hdpi" />
        <splash src="/www/res/splash.png" density="port-xhdpi" qualifier="port-xhdpi" />

        <allow-intent href="market:*" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.3.1" />
</widget>
